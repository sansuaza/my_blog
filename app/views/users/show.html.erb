<p> Perfil del user <%=@user.email %> <p>
<div class ="container p-5 my-3 border">
  <h1 class="text-center"><%= @user.email %></h1>

  <p class="text-center">Username</p>
  <% if current_user.is_followee?(@user) %>
    <%= button_to 'Follow', { action: "follow" }, method: :post%>
  <% else %>
    <%= button_to 'Unfollow', { action: "unfollow" }, method: :post%>
  <% end %>
</div>
